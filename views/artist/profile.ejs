<%   include ../partials/header %>

<div class="container">
        <div class="row">
            <div class="col-md-offset-2 col-md-8">
            <h2><%= user.username %> Profile</h2>
            <br>
            <form action="/artists/user/<%= currentUser._id %>?_method=PUT" method="POST">
                <div class="form-group">
                <label>UserName</label>
                <input type="text" class="form-control" name="gig[username]" value="<%= user.username %>"/>
                </div>

                <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="gig[email]" value="<%= user.email %>"/>
                </div>
                <div>
                <button class="btn btn-default">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>


<%   include ../partials/footer %>